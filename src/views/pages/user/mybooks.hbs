<!-- table 1 -->

<div class="flex flex-wrap -mx-3">
  <div class="flex-none w-full max-w-full px-3">
    <div
      class="relative flex flex-col min-w-0 mb-6 break-words bg-white border-0 border-transparent border-solid shadow-xl dark:bg-slate-850 dark:shadow-dark-xl rounded-2xl bg-clip-border"
    >
      <div
        class="p-6 pb-0 mb-0 border-b-0 border-b-solid rounded-t-2xl border-b-transparent"
      >
        <h6 class="dark:text-white">My Books</h6>
      </div>
      <div class="flex-auto px-0 pt-0 pb-2">
        <div class="p-0 overflow-x-auto">
          <table
            class="items-center w-full mb-0 align-top border-collapse dark:border-white/40 text-slate-500"
          >
          {{#if books.length}}
            <thead class="align-bottom">
              
              <tr>
                <th
                  class="px-6 py-3 font-bold text-left uppercase align-middle bg-transparent border-b border-collapse shadow-none dark:border-white/40 dark:text-white text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70"
                >
                  Book</th>
                <th
                  class="px-6 py-3 pl-2 font-bold text-left uppercase align-middle bg-transparent border-b border-collapse shadow-none dark:border-white/40 dark:text-white text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70"
                >
                  Genre</th>
                <th
                  class="px-6 py-3 font-bold text-center uppercase align-middle bg-transparent border-b border-collapse shadow-none dark:border-white/40 dark:text-white text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70"
                >
                  Status</th>
                <th
                  class="px-6 py-3 font-bold text-center uppercase align-middle bg-transparent border-b border-collapse shadow-none dark:border-white/40 dark:text-white text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70"
                >
                  Due Date</th>
                <th
                  class="px-6 py-3 font-bold text-center uppercase align-middle bg-transparent border-b border-collapse border-solid shadow-none dark:border-white/40 dark:text-white text-xxs tracking-none whitespace-nowrap text-slate-400 opacity-70"
                >
                  Action</th>
              </tr>
            </thead>
            <tbody>
              
                {{#each books}}
                  <tr>
                    <td class="p-2 ...">
                      <div class="flex px-2 py-1">
                        <div>
                          <img
                            src="/uploads/{{this.book.coverimage}}"
                            class="h-9 w-9 rounded-xl"
                            alt="{{this.book.title}}"
                          />
                        </div>
                        <div class="flex flex-col justify-center">
                          <h6
                            class="mb-0 text-sm leading-normal dark:text-white"
                          >
                            {{this.book.title}}
                          </h6>
                          <p
                            class="mb-0 text-xs text-slate-400 dark:text-white/80"
                          >
                            {{this.book.author}}
                          </p>
                        </div>
                      </div>
                    </td>
                    <td class="p-2 ...">
                      <p class="text-xs font-semibold dark:text-white/80">
                        {{this.book.genre.name}}
                      </p>
                      <p class="text-xs text-slate-400 dark:text-white/80">
                        {{this.book.publicationDate}}
                      </p>
                    </td>
                          <td class="p-2 text-center">
                          <span
                            class="bg-gradient-to-tl px-2.5 text-xs rounded-1.8 py-1.4 inline-block whitespace-nowrap text-center align-baseline font-bold uppercase leading-none text-white
                              {{#if (equal this.status 'Due')}} from-red-600 to-red-500
                              {{else if (equal this.status 'Borrowed')}} from-emerald-500 to-teal-400 
                              {{else if (equal this.status 'Overdue')}} from-blue-500 to-blue-400 
                              {{else}} from-gray-500 to-gray-400 
                            
                           
                              {{/if}}"
                          >
                            {{this.status}}
                          </span>
                        </td>

                    <td class="p-2 text-center ...">
                      <span class="text-xs text-slate-400 dark:text-white/80">
                        {{this.dueDate}}
                      </span>
                    </td>
                    <td class="p-2 text-center ...">
                      <a href="/return/{{this.book._id}}" class="bg-gradient-to-tl from-emerald-500 to-teal-400 px-2.5 text-xs rounded-1.8 py-1.4 inline-block whitespace-nowrap text-center align-baseline font-bold uppercase leading-none text-white">Return</a>
                    </td>
                  </tr>
                {{/each}}
              {{else}}
                <tr>
                  <td
                    colspan="5"
                    class="text-center py-4 text-gray-500 dark:text-white/70"
                  >
                    You havenâ€™t borrowed any books yet.
                  </td>
                </tr>
              {{/if}}

            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>