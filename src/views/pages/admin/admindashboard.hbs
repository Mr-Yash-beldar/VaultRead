<!-- cards row 2 -->
<div class="flex flex-wrap mt-6 -mx-3">
  <div class="w-full max-w-full px-3 mt-0 lg:w-7/12 lg:flex-none">
    <div
      class="border-black/12.5 dark:bg-slate-850 dark:shadow-dark-xl shadow-xl relative z-20 flex min-w-0 flex-col break-words rounded-2xl border-0 border-solid bg-white bg-clip-border"
    >
      <div
        class="border-black/12.5 mb-0 rounded-t-2xl border-b-0 border-solid p-6 pt-4 pb-0"
      >
        <h6 class="capitalize dark:text-white">Your Overview</h6>
        <p class="mb-0 text-sm leading-normal dark:text-white dark:opacity-60">
          <i class="fa fa-arrow-up text-emerald-500"></i>
          <span class="font-semibold"></span>
        </p>
      </div>
      <div class="flex-auto p-4">
        <div>
          <canvas id="chart-line" height="300"></canvas>
        </div>
      </div>
    </div>
  </div>

  <div class="w-full max-w-full px-3 lg:w-5/12 lg:flex-none">
    <div slider class="relative w-full h-full overflow-hidden rounded-2xl">

      <div
        slide
        class="absolute w-full h-full transition-all duration-500 bg-white dark:bg-slate-850"
      >
        <img
          class="object-cover h-full w-full opacity-60"
          src="/static/assets/img/dashboard-card.png"
          alt="carousel image"
        />
        <div
          class="block text-start ml-12 left-0 bottom-0 absolute right-[15%] pt-5 pb-5 text-black"
        >

          <h5 class="mb-1 text-black">‚è≥ Pending Actions</h5>
          <p id="quoteText" class="dark:opacity-80 text-black">
            You have
            <strong>{{pendingRequests}}</strong>
            book requests confirmations pending.
          </p>
          <a
            href="/requestedbooks"
            id="quoteText"
            class="card-link dark:opacity-80 text-black"
          >View Requests</a>

        </div>
      </div>
    </div>
  </div>

</div>

<!-- cards row 3 -->

<div class="flex flex-wrap mt-6 -mx-3">
  <div class="w-full max-w-full px-3 mt-0 mb-6 lg:mb-0 lg:w-7/12 lg:flex-none">
    <div
      class="relative flex flex-col min-w-0 break-words bg-white border-0 border-solid shadow-xl dark:bg-slate-850 dark:shadow-dark-xl dark:bg-gray-950 border-black-125 rounded-2xl bg-clip-border"
    >
      <div class="p-4 pb-0 mb-0 rounded-t-4">
        <div class="flex justify-between">
          <h6
            class="leading-normal uppercase dark:text-white dark:opacity-60 text-sm mb-4"
          >Add Genre</h6>
        </div>
      </div>
      <div class="overflow-x-auto">
        <div
          class="flex-auto p-6 bg-white rounded-xl shadow-md dark:bg-slate-850"
        >

          <form action="/addgenre" method="POST">
            <div class="flex flex-wrap -mx-3">
              <!-- Genre Name -->
              <div class="w-full max-w-full px-3 shrink-0 md:w-6/12 md:flex-0">
                <div class="mb-4">
                  <label
                    for="genreName"
                    class="inline-block mb-2 ml-1 font-bold text-xs text-slate-700 dark:text-white/80"
                  >Genre Name</label>
                  <input
                    type="text"
                    id="genreName"
                    name="name"
                    placeholder="e.g. Historical Fiction"
                    class="focus:shadow-primary-outline dark:bg-slate-800 dark:text-white text-sm leading-5.6 ease block w-full appearance-none rounded-lg border border-solid border-gray-300 bg-white bg-clip-padding px-3 py-2 font-normal text-gray-700 outline-none transition-all placeholder:text-gray-500 focus:border-blue-500 focus:outline-none"
                    required
                  />
                </div>
              </div>
            </div>
            <!-- Submit Button -->
            <div class="px-3 mt-4">
              <button
                type="submit"
                style="background-color: #4a79df;"
                class="bg-blue-600 text-white py-2 px-4 rounded-lg text-sm hover:bg-blue-700 transition duration-200"
              >
                Add Genre
              </button>
            </div>
          </form>

        </div>
      </div>
    </div>
  </div>
  <div class="w-full max-w-full px-3 mt-0 lg:w-5/12 lg:flex-none">
    <div
      class="border-black/12.5 shadow-xl dark:bg-slate-850 dark:shadow-dark-xl relative flex min-w-0 flex-col break-words rounded-2xl border-0 border-solid bg-white bg-clip-border"
    >
      <div class="p-4 pb-0 rounded-t-4">
        <h6 class="mb-0 dark:text-white">Books Categories</h6>
      </div>
      <div class="flex-auto p-4">

        <ul class="flex flex-col pl-0 mb-0 rounded-lg">
          {{! for each Genres }}
          {{#each genres}}
            <li
              class="relative flex justify-between py-2 pr-4 mb-2 border-0 rounded-t-lg rounded-xl text-inherit"
            >
              <div class="flex items-center">
                <div
                  class="inline-block w-8 h-8 mr-4 text-center text-black bg-center shadow-sm fill-current stroke-none bg-gradient-to-tl from-zinc-800 to-zinc-700 dark:bg-gradient-to-tl dark:from-slate-750 dark:to-gray-850 rounded-xl"
                >
                  <i
                    class="text-white fas fa-shapes relative top-0.75 text-xxs"
                  ></i>
                </div>
                <div class="flex flex-col">
                  <h6
                    class="mb-1 text-sm leading-normal text-slate-700 dark:text-white"
                  >{{this.name}}</h6>
                  <span class="text-xs leading-tight dark:text-white/80"></span>
                </div>
              </div>
              <div class="flex">
                <button
                  class="group ease-in leading-pro text-xs rounded-3.5xl p-1.2 h-6.5 w-6.5 mx-0 my-auto inline-block cursor-pointer border-0 bg-transparent text-center align-middle font-bold text-slate-700 shadow-none transition-all dark:text-white"
                ><i
                    class="ni ease-bounce text-2xs group-hover:translate-x-1.25 ni-bold-right transition-all duration-200"
                    aria-hidden="true"
                  ></i></button>
              </div>
            </li>
          {{/each}}
          {{! end for each Geners }}

        </ul>

        <!-- Pagination Controls -->
        <div class="flex justify-center mt-4 space-x-2">
          {{#if pagination.hasPrev}}
            <a
              href="?page={{pagination.prevPage}}"
              class="px-4 py-2 text-sm font-medium text-black bg-gray-700 rounded hover:bg-gray-800"
            >
              Previous
            </a>
          {{/if}}

          <span
            class="px-4 py-2 text-sm font-medium text-gray-700 bg-gray-100 rounded"
          >
            Page
            {{pagination.current}}
            of
            {{pagination.totalPages}}
          </span>

          {{#if pagination.hasNext}}
            <a
              href="?page={{pagination.nextPage}}"
              class="px-4 py-2 text-sm font-medium text-black bg-blue-400 rounded hover:bg-blue-800"
            >
              Next
            </a>
          {{/if}}
        </div>

      </div>
    </div>
  </div>
</div>