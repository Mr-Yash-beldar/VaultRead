<div class="flex flex-wrap -mx-3">
  <div class="flex-none w-full max-w-full px-3">
    <div
      class="relative flex flex-col min-w-0 mb-6 break-words bg-white border-0 border-transparent border-solid shadow-xl dark:bg-slate-850 dark:shadow-dark-xl rounded-2xl bg-clip-border"
    >
      <div
        class="p-6 pb-0 mb-0 border-b-0 border-b-solid rounded-t-2xl border-b-transparent"
      >
        <h6 class="dark:text-white">Members</h6>
      </div>
      <div class="flex-auto px-0 pt-0 pb-2">
        <div class="p-0 overflow-x-auto">
          <table
            class="table-auto w-full text-left text-sm text-slate-500 dark:text-white border-collapse"
          >
            <thead
              class="bg-gray-100 dark:bg-slate-800 text-xs uppercase text-slate-500 dark:text-slate-300"
            >

              <tr>
                <th class="px-6 py-3">User</th>
                <th class="px-6 py-3">Registration Date</th>
                <th class="px-6 py-3 text-center">Issued Books</th>
                <th class="px-6 py-3 text-center">Action</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-slate-200 dark:divide-slate-700">
              <!-- User Row 1 -->
              {{#each users}}
                <tr>
                  <td class="px-6 py-4 flex items-center">
                    <img
                      src="{{this.avatar}}"
                      alt="user1"
                      class="w-10 h-10 rounded-xl mr-4"
                    />
                    <div>
                      <div
                        class="font-bold text-slate-900 dark:text-white"
                      >{{this.name.firstname}} {{this.name.lastname}}</div>
                      <div class="text-slate-400 text-xs">{{this.email}}</div>
                    </div>
                  </td>
                  <td class="px-6 py-4">
                    <div class="font-semibold text-sm">{{this.createdAt}}</div>
                  </td>
                  <td
                    class="px-6 py-4 text-center font-semibold"
                  >{{this.requestCount}}</td>
                  <td class="px-6 py-4 text-center">
                    <form
                      method="POST"
                      action="deleteuser/{{this._id}}"
                      style="display:inline;"
                      onsubmit="return confirm('Are you sure you want to delete this user? All issued requests and reviews by this user will also be deleted.')"
                    >
                      <button
                        class="bg-gradient-to-tl from-red-600 to-red-500 px-2.5 text-xs rounded-1.8 py-1.4 inline-block whitespace-nowrap text-center align-baseline font-bold uppercase leading-none text-black"
                        type="submit"
                      >
                        Delete
                      </button>
                    </form>

                  </td>
                </tr>
              {{/each}}

            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

