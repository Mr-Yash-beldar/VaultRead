<!-- ✅ Flash Message Section -->
<div id="flash-container">
  {{#if success}}
    <div class="flash-message success" role="alert">
      <div class="icon-text">
        <svg
          class="icon"
          fill="none"
          stroke="currentColor"
          stroke-width="5"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M5 13l4 4L19 7"
          />
        </svg>
        <span>{{success}}</span>
      </div>
      <button
        type="button"
        class="close-button"
        onclick="this.parentElement.remove()"
      >✕</button>
    </div>
  {{/if}}

  {{#if error}}
    <div class="flash-message error" role="alert">
      <div class="icon-text">
        <svg
          class="icon"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M6 18L18 6M6 6l12 12"
          />
        </svg>
        <span>{{error}}</span>
      </div>
      <button
        type="button"
        class="close-button"
        onclick="this.parentElement.remove()"
      >✕</button>
    </div>
  {{/if}}
</div>
<!-- ✅ End Flash Section -->